GRID = COMP([INSR(PROD),AA(QUOTE)])

#pavimenti del primo piano -> floor0

section01 = GRID([[3.2],[-0.5,-9.1,0.5,1.8,0.5],[0.14]])
section02 = GRID([[-2.7,0.5+2+0.5+4.7+0.5+4.7+0.5],[-0.5-3.6,1.7,1.5,0.5,1.8,0.5,1.8,0.5],[0.14]])
section03 = GRID([[-3.2,-2,-0.5,-4.7,-0.5,-4.7,-0.5,0.6],[-5.8,1.5],[0.14]])
section04 = GRID([[-3.2,-2,-0.5,-4.7,-0.5,-4.7,-0.5,1.9],[-5.8,-1.5,0.5,1.8,0.5,1.8,0.5],[0.14]])
section05 = GRID([[-2.7,0.5,1.2,0.5],[-0.5,-3.6,0.7,0.7],[0.14]])
#sectioni circolari
section06 = T([1,2])([18,9.85])(CYLINDER([2.55,0.14])(36))
section07 = T([1,2])([3.8,3.4])(CYLINDER([1.1,0.14])(36))

floor0 = STRUCT([section01,section02,section03,section04,section05,section06,section07])



#pavimenti del secondo piano -> floor1

section11 = GRID([[((0.5+4.7)*4)+0.5],[0.5,9.1,0.25,0.25],[0.14]])
section12 = GRID([[2.7+3,-4.7,-0.5,-0.5,4.2,0.5,4.7,0.5],[-9.6,-0.5,1.8],[0.14]])
section13 = GRID([[((0.5+4.7)*4)+0.5],[-9.6-0.5-1.8,0.5],[0.14]])
#balcone esterno del secondo piano
balcone = T([1,2])([-2.2,9.9])(CUBOID([2.2,2,0.14]))

floor1 = T([3])([2.5])(STRUCT([section11,section12,section13,balcone]))



#pavimenti del terzo piano ->floor2

section21 = GRID([[((0.5+4.7)*4)+0.5],[9.6+0.5],[0.14]])
section22 = GRID([[0.5,1.7,0.5,0.5,2,0.5,4.7,-0.5,-3,1.7,0.5,4.7,0.5],[-9.6,-0.25,0.25,1.8],[0.14]])
#section23 = interno del terzo piano con muro obliquo
#section23 = MKPOL([[],[],None])
section24 = GRID([[((0.5+4.7)*4)+0.5],[0.5],[0.14]])

floor2 = T([3])([(2.36+0.14)*2])(STRUCT([section21,section22,section24]))

#pavimenti del quarto piano -> floor3

section31 = GRID([[((0.5+4.7)*4)+0.5],[9.6+0.5],[0.14]])
section32 = GRID([[0.5,1.7,0.5,0.5,2,0.5,4.7,0.5,-4.7,-0.5,-0.5,4.7],[-9.6,-0.25,0.25,1.8],[0.14]])
section33 = GRID([[((0.5+4.7)*4)+0.5],[-9.6,-0.5,-1.8,+0.5],[0.14]])

floor3 = T([3])([(2.36+0.14)*3])(STRUCT([section31,section32,section33]))


#pavimenti del quinto piano -> floor4


floors = STRUCT([floor0,floor1,floor2,floor3])

VIEW(floors)















